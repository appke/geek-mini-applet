/* components/w-tab-control/w-tab-control.wxss */
.tab-control {
  display: flex;
  margin-bottom: 16rpx;
  background: #fff;
  padding-bottom: 8rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  height: 80rpx;
  line-height: 80rpx;
}

.active text {
  color: red;
  padding: 16rpx 16rpx;
  border-bottom: 6rpx solid red;
}